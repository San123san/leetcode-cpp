//Back-end complete function Template for C++

class Solution {
  public:
    vector<int> findLeastGreater(vector<int>& arr, int n) {
        vector<int> res(n, -1);
        set<int> bst;
        
        for (int i = n - 1; i >= 0; i--) {
            auto it = bst.upper_bound(arr[i]);
            if (it != bst.end()) {
                res[i] = *it;
            }
            
            bst.insert(arr[i]);
        }
        return res;
    }
};
